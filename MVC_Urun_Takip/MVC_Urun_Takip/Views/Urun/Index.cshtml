@using MVC_Urun_Takip.Models.Entity
@model List<TBL_URUN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="table1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.urunid</td>
                <td>@x.urunad</td>
                <td>@x.marka</td>
                <td>@x.TBL_KATEGORI.kategoriad</td>
                <td>@x.fiyat</td>
                <td>@x.stok</td>
                <td>
                    @Html.ActionLink("Sil", "Sil", new { id = x.urunid }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })
                    <a href="/Urun/UrunGetir/@x.urunid" class="btn btn-warning" style="margin-left:5%">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
<script>
    $('#table1').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
        }
    });
</script>

<a href="/Urun/YeniUrun/" class="btn btn-success">Ürün Ekle</a>

